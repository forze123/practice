@model AuthApp.ViewModels.RegisterModel
    <div style="width:450px; height:400px; margin:auto; padding-top:100px;">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <h2 class="text-light">Регистрация</h2>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div style="margin:auto;">
                <div class="form-group">
                    <input class="form-control" required maxlength="30" placeholder="Введите Логин" type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <input class="form-control" required maxlength="30" placeholder="Введите пароль" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input class="form-control" required maxlength="30" placeholder="Повторите пароль" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div>
                    <input class="btn btn-danger" type="submit" value="Регистрация" />
                    <a type="button" href="/Home/index" value="Назад" class="btn btn-light">Назад</a>
                </div>
            </div>
        </form>
    </div>